# Environment Variables
# Copy this file to .env and update values as needed

# Database (Docker Compose mode)
POSTGRES_DB=sms
POSTGRES_USER=sms_user
POSTGRES_PASSWORD=change-me-in-production
DATABASE_URL=postgresql://sms_user:change-me-in-production@db:5432/sms

# Backend
SECRET_KEY=change-me-to-a-random-string
DEBUG=false

# Frontend
VITE_API_URL=http://localhost:8000

# MinIO (object storage for images)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-in-production
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# LLM (Natural Language Chat)
# Supports OpenAI, OpenRouter, Ollama, or any OpenAI-compatible API
LLM_API_KEY=sk-your-api-key-here
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
# For Ollama: LLM_BASE_URL=http://localhost:11434/v1  LLM_MODEL=llama3.2
