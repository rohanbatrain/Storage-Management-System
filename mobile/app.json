{
    "expo": {
        "name": "SMS",
        "slug": "sms-mobile",
        "version": "0.0.1",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "dark",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#0f0f14"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#0f0f14"
            },
            "package": "com.sms.mobile",
            "permissions": [
                "android.permission.CAMERA"
            ],
            "usesCleartextTraffic": true
        },
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.sms.mobile"
        },
        "plugins": [
            [
                "expo-camera",
                {
                    "cameraPermission": "Allow SMS to access your camera to scan QR codes"
                }
            ],
            [
                "@react-native-voice/voice",
                {
                    "microphonePermission": "Allow SMS to securely transcribe your voice into inventory commands.",
                    "speechRecognitionPermission": "Allow SMS to transcribe your voice on-device."
                }
            ]
        ]
    }
}