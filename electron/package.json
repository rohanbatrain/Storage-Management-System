{
    "name": "personal-storage-management-electron",
    "version": "0.0.1",
    "description": "Electron desktop wrapper for Personal Storage Management",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "author": "Rohan",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "wait-on": "^7.2.0",
        "cross-env": "^7.0.3",
        "bonjour-service": "^1.3.0"
    },
    "build": {
        "appId": "com.rohan.psm",
        "productName": "Personal Storage Management",
        "files": [
            "main.js",
            "preload.js",
            "sync.js",
            "renderer/**/*"
        ],
        "extraResources": [
            {
                "from": "backend-dist",
                "to": "backend-dist",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "mac": {
            "category": "public.app-category.productivity",
            "icon": "build/icon.icns"
        },
        "win": {
            "icon": "build/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility"
        }
    }
}
